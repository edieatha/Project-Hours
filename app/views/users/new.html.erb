<h1 class='text-center text-white'>Sign up</h1>

<div class="col-12 mb-5">
  <div class="text-center text-white">
    <%= form_with(model: @user, local: true) do |f| %>

      <%= f.label :username %>
      <%= f.text_field :username, class: 'mb-1 form-control' %>

      <%= f.submit "Create my account", class: "mt-2 btn-lg btn-primary btn-block" %>
    <% end %>
	<%= link_to "Log in", login_path, class: "mt-2 btn-lg btn-primary btn-block" %>
  </div>
</div>