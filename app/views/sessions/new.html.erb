<h1 class='text-center'>Log in</h1>

<div class="col-12 mb-5">
  <div class="text-center">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.label :username %>
      <%= f.text_field :username, class: 'mb-1 form-control' %>

      <%= f.submit "Log in", class: " mt-2 btn btn-lg btn-primary btn-block" %>
    <% end %>

  </div>
</div>